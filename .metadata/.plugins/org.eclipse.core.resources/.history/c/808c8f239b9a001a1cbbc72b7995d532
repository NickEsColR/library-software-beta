package model;

public class Shelf {
	
	//constant
	
	public static int MAX_BOOK = 100;
	
	//attributes
	
	private int code;
	
	//relations
	
	private Book[] books;
	private Shelf father;
	private Shelf right;
	private Shelf left;
	
	//methods
	
	public Shelf(int c) {
		code = c;
		books = new Book[MAX_BOOK];
	}
	
	public int getCode() {
		return code;
	}
	
	public Shelf getFather() {
		return father;
	}

	public void setFather(Shelf father) {
		this.father = father;
	}

	public Shelf getRight() {
		return right;
	}

	public void setRight(Shelf right) {
		this.right = right;
	}

	public Shelf getLeft() {
		return left;
	}

	public void setLeft(Shelf left) {
		this.left = left;
	}

	public boolean searchBook() {
		return false;
	}
}
